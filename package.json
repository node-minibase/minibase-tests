{
  "name": "node-minibase",
  "version": "0.1.0",
  "description": "Tests for applications built on MiniBase",
  "repository": "node-minibase/node-minibase",
  "author": "Charlike Mike Reagent <@tunnckoCore> (http://www.tunnckocore.tk)",
  "precommit.silent": true,
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "lint": "standard --verbose",
    "pretest": "npm run lint",
    "test": "npm run coverage",
    "posttest": "npm run lint:coverage",
    "coverage": "nyc node test.js",
    "lint:coverage": "nyc check-coverage --lines 0 --branches 0 --statements 0 --functions 0",
    "report-coverage": "nyc report --reporter=text-lcov | coveralls",
    "prerelease": "npm test",
    "release": "standard-version --sign --no-verify",
    "precommit": "git add --all",
    "commit": "git-cz"
  },
  "dependencies": {
    "assert-kindof": "^2.0.0",
    "eventemitter3": "^2.0.2",
    "minibase": "*",
    "mukla": "^0.4.8"
  },
  "devDependencies": {
    "commitizen": "~2.7.0",
    "coveralls": "^2.11.15",
    "cz-conventional-changelog": "1.1.5",
    "nyc": "^8.3.2",
    "pre-commit": "^1.1.3",
    "standard": "^8.5.0",
    "standard-version": "^3.0.0"
  },
  "files": [
    "index.js"
  ],
  "keywords": [
    "application",
    "apps",
    "base",
    "compat",
    "compatible",
    "mini",
    "minibase",
    "minitests",
    "mukla",
    "suite",
    "test",
    "tests",
    "testsuite"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "verb": {
    "run": true,
    "toc": true,
    "layout": "empty",
    "tasks": [
      "readme"
    ],
    "lint": {
      "reflinks": true
    }
  }
}