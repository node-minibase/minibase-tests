{
  "name": "minibase-tests",
  "version": "1.1.2",
  "description": "Tests for applications built on [minibase][] or [base][]. All Base apps passes these tests.",
  "repository": "node-minibase/minibase-tests",
  "author": "Charlike Mike Reagent <@tunnckoCore> (http://www.tunnckocore.tk)",
  "precommit.silent": true,
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "lint": "standard --verbose",
    "pretest": "npm run lint",
    "test": "npm run coverage",
    "posttest": "npm run lint:coverage",
    "coverage": "nyc node test.js",
    "lint:coverage": "nyc check-coverage --lines 100 --branches 100 --statements 100 --functions 100",
    "report-coverage": "nyc report --reporter=text-lcov | coveralls",
    "prerelease": "npm test",
    "release": "standard-version --sign --no-verify",
    "precommit": "git add --all",
    "commit": "git-cz"
  },
  "dependencies": {
    "assert-kindof": "^2.0.0",
    "bluebird": "^3.4.6",
    "each-promise": "^1.0.2",
    "eventemitter3": "^2.0.2"
  },
  "devDependencies": {
    "assemble-core": "^0.26.0",
    "base": "^0.11.1",
    "commitizen": "~2.9.4",
    "coveralls": "^2.11.15",
    "cz-conventional-changelog": "1.1.5",
    "minibase": "*",
    "mukla": "^0.4.8",
    "nyc": "^10.0.0",
    "pre-commit": "^1.1.3",
    "standard": "^8.5.0",
    "standard-version": "^3.0.0",
    "templates": "^0.25.2"
  },
  "files": [
    "index.js",
    "runner.js"
  ],
  "keywords": [
    "application",
    "apps",
    "base",
    "compat",
    "compatible",
    "mini",
    "minibase",
    "minitests",
    "mukla",
    "suite",
    "test",
    "tests",
    "testsuite"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "verb": {
    "run": true,
    "toc": {
      "render": true,
      "method": "preWrite",
      "maxdepth": 3,
      "footer": ""
    },
    "layout": "empty",
    "tasks": [
      "readme"
    ],
    "related": {
      "list": [
        "assemble-core",
        "assemble",
        "generate",
        "templates",
        "minibase",
        "minibase-is-registered",
        "minibase-create-plugin"
      ]
    },
    "reflinks": [
      "base",
      "minibase",
      "commitizen",
      "standard-version",
      "verb",
      "verb-generate-readme"
    ],
    "lint": {
      "reflinks": true
    }
  }
}
